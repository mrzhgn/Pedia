<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/fav_course_image"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/fav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fav_course_image" />

    <TextView
        android:id="@+id/fav_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fav_title" />

    <Button
        android:id="@+id/fav_add_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В корзину" />

    <Button
        android:id="@+id/fav_add_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Купить" />

</RelativeLayout>